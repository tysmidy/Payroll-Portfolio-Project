{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "checkJs": false,
        "inlineSources": true,
        "noErrorTruncation": true,
        "composite": true,
        "types": [
            "jest",
            "node",
            "express"
        ]
    },
    "include": [
        "backend/**/*.ts",
        "backend/**/*.js",
        "backend/**/*.json"
    ],
    "$schema": "https://json.schemastore.org/tsconfig"
}